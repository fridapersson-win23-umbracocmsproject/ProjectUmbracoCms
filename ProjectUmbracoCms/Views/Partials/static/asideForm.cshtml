@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage;
@inject Umbraco.Cms.Web.Common.UmbracoHelper UmbracoHelper;

@{
    
}

<div class="form-text">
    <h4>How can we help you?</h4>
    <p>online support 24/7, we are here to help you</p>
</div>

@if (ViewData["support_success"] == null)
{
	@using (Html.BeginUmbracoForm("HandleSupportFormSubmit", "SupportFormSurface", FormMethod.Post))
	{
		<div class="form-input-group">
			<input type="hidden" name="Type" value="Support" />
			<input id="email" class="form-input" name="email" type="email" placeholder="E-mail address" value="@TempData["support_email"]" />
			<div class="envelope-icon">
				<i class="fa-regular fa-envelope"></i>
			</div>
			@if (TempData["support_error_email"] != null && (bool)TempData["support_error_email"]!)
			{
				<span class="form-error">You have to enter a valid email</span>
			}
		</div>

		<button class="btn-theme" type="submit">SEND</button>
	}
}
else
{
	<div class="form-success">@ViewData["support_success"]</div>
}
<div class="form-background-image">
    <img src="/media/4byituoo/mail.svg" alt="" />
</div>
