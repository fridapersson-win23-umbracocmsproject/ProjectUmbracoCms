@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.PropertyEditors.ValueConverters;

@{
    //knapp text o url
    var buttonLinkText = Model?.Content.Value<string>("buttonLinkText") ?? null;
    var buttonLinkUrl = Model?.Content.Value<string>("buttonLinkUrl") ?? null;

    //kanpp layout
    var buttonColor = Model?.Content.Value<ColorPickerValueConverter.PickedColor>("buttonColor")?.Label.ToLower() ?? "";
}

@if (!string.IsNullOrEmpty(buttonColor))
{
    <a href="@buttonLinkUrl" title="@buttonLinkText" class="btn btn-@buttonColor">@buttonLinkText</a>
}
else
{
    <a href="@buttonLinkUrl" title="@buttonLinkText" class="btn btn-theme">@buttonLinkText</a>
}
