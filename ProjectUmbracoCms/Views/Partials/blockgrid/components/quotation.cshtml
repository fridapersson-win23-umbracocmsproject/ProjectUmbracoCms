@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var quotationContent = Model?.Content.Value<string>("quotationContent");

    //formatting
    var quotationSpacingTopClass = (Model!.Content.Value<bool>("addSpaceToTop")) ? "quotation-spacing-top" : "";
    var quotationSpacingBottomClass = (Model!.Content.Value<bool>("addSpaceToBottom")) ? "quotation-spacing-bottom" : "";
}

@if(!string.IsNullOrEmpty(quotationContent)) {
    <blockquote class="@quotationSpacingTopClass @quotationSpacingBottomClass">
        @quotationContent
    </blockquote>
}